generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Coach {
  id    Int     @id @default(autoincrement())
  name  String
  phone String
  slots Slot[]
}

model Student {
  id        Int     @id @default(autoincrement())
  name      String
  phone     String
  bookings  Booking[]
}

model Booking {
  id          Int       @id @default(autoincrement())
  slotId      Int
  student     Student   @relation(fields: [studentId], references: [id])
  studentId   Int
  feedback    Feedback?
}

model Slot {
  id        Int       @id @default(autoincrement())
  coach     Coach     @relation(fields: [coachId], references: [id])
  coachId   Int
  startTime DateTime
  endTime   DateTime
}

model Feedback {
  id                    Int         @id @default(autoincrement())
  booking               Booking     @relation(fields: [bookingId], references: [id])
  bookingId             Int         @unique
  satisfaction          Int
  notes                 String
}
